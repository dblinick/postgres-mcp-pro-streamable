# PostgreSQL Database Configuration
# Use either POSTGRES_* (recommended) or DATABASE_URI (legacy)
POSTGRES_USERNAME=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_HOST=your_db_host
POSTGRES_PORT=5432
POSTGRES_DATABASE=your_database
# SSL modes: disable, prefer, require, verify-ca, verify-full
POSTGRES_SSL_MODE=disable

# Optional API key for Streamable HTTP transport
MCP_API_KEY=your_api_key

# Streamable HTTP settings
STREAMABLE_HTTP_HOST=0.0.0.0
STREAMABLE_HTTP_PORT=8000
